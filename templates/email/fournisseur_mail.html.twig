<!DOCTYPE html>
<html lang="fr">
<head>
    <title>Fiche client</title>

</head>
<body>
{% apply inline_css %}

<style>
    html, body, div, span, applet, object, iframe,
    h1, h2, h3, h4, h5, h6, p, blockquote, pre,
    a, abbr, acronym, address, big, cite, code,
    del, dfn, em, img, ins, kbd, q, s, samp,
    small, strike, strong, sub, sup, tt, var,
    b, u, i, center,
    dl, dt, dd, ol, ul, li,
    fieldset, form, label, legend,
    table, caption, tbody, tfoot, thead, tr, th, td,
    article, aside, canvas, details, embed,
    figure, figcaption, footer, header, hgroup,
    menu, nav, output, ruby, section, summary,
    time, mark, audio, video {
        margin: 0;
        padding: 0;
        border: 0;
        font-size: 100%;
        font-family: arial;
        vertical-align: baseline;
    }
    /* HTML5 display-role reset for older browsers */
    article, aside, details, figcaption, figure,
    footer, header, hgroup, menu, nav, section {
        display: block;
    }
    body {
        line-height: 1;
    }
    ol, ul {
        list-style: none;
    }
    blockquote, q {
        quotes: none;
    }
    blockquote:before, blockquote:after,
    q:before, q:after {
        content: '';
        content: none;
    }
    table {
        border-collapse: collapse;
        border-spacing: 0;
        width: 100%;
    }

    body{

        width: 100%;
    }

    .container {
        width: 550px;
        margin: 10px auto;
    }
    .rounded {
        border-radius: .25rem!important;
    }

    .bg-secondary {
        background-color: #6c757d!important;
    }

    .bg-graisclair {
        background-color: #9da0a1 !important;
    }
    .text-white {
        color: #fff!important;
    }
    .p-2 {
        padding: .5rem!important;
    }
    .mb-2 {
        margin-bottom: .5rem!important;
    }

    .my-2 {
        margin-top: .5rem!important;
        margin-bottom: .5rem!important;
    }

    .card {
        min-width: 0;
        background-color: #fff;
        background-clip: border-box;
        border: 1px solid rgba(0,0,0,.125);
        border-radius: .5rem!important;
    }

    .card-header {
        font-weight: bold;
    }

    table {
        min-width: 490px;
        text-align: start;
        border-collapse: unset;
    }
    th {
        display: table-cell;
        vertical-align: inherit;
        text-align: start;
        font-weight: 300;
    }

    .card-info {
        width: 50%;
        padding: 10px 10px;
    }
    .card-item label:first-child, .card-item-1 label:first-child {
        font-weight: bold;
        margin: 5px 0;
    }
    .card-item div {
        padding-top: 5px;
    }

    table
</style>

<div class="container">
    <h4 class=" p-2 mb-2 bg-secondary text-white rounded">{{ nomFournisseur }}</h4>
    <p>Voici la fiche client de {{ nomUtilisateur }}  {{ prenomUtilisateur }}</p>
    <table class="card my-2">
    <thead>
    <td colspan="2" class="card-header p-2 mb-2 bg-graisclair text-white rounded">Contact</td>
    </thead>
    <tbody>
        <tr>
            <th class="card-info">
                <div class="card-item">
                    <label class="" for="">Nom : </label>
                    <div class="">{{ nomUtilisateur }}</div>
                </div>
            </th>
            <th class="card-info">
                <div class="card-item">
                    <label for="">Prénom : </label>
                    <div>{{ prenomUtilisateur }}</div>
                </div>
            </th>
        </tr>
        <tr>
            <th class="card-info">
                <div class="card-item">
                    <label for="">Téléphone : </label>
                    <div>{{ telUtilisateur }}</div>
                </div>

            </th>
            <th class="card-info">
                <div class="card-item">
                    <label for="">Email : </label>
                    <div>{{ emailUtilisateur }}</div>
                </div>
            </th>
        </tr>
        <tr>
            <th class="card-info">
                <div class="card-item">
                    <label for="">Code postal : </label>
                    <div>{{ cpUtilisateur }}</div>
                </div>
            </th>
            <th class="card-info">
                <div class="card-item">
                    <label for="">Ville : </label>
                    <div>{{ villeUtilisateur }}</div>
                </div>
            </th>
        </tr>
    </tbody>

</table>
<table class="card my-2">
    <thead>
    <td colspan="2" class="card-header p-2 mb-2 bg-graisclair text-white rounded">Informations</td>
    </thead>
    <tbody>
    <tr>
        <th class="card-info">
            <div class="card-item">
                <label for="">Propriétaire : </label>
                {% set jesuisproprio = false %}
                {% if proprieteUtilisateur == true %}
                    {% set jesuisproprio = true %}
                    <input type="checkbox" value="proprio" disabled="disabled" checked readonly>
                {% else %}
                    <input type="checkbox" value="proprio" disabled="disabled" readonly>
                {% endif %}
            </div>
        </th>
        <th class="card-info">
            <div class="card-item">
                <label for="">Type de bien ? : </label>
                <div>{{ typeBienUtilisateur }}</div>
            </div>
        </th>

        <th class="expander"></th>
    </tr>
    <tr>
        <th class="card-info">
            <div class="card-item">
                <label for="">Anciennetée du logement : </label>
                {% set plsude2ans = false %}
                {% if ancienneteUtilisateur == true %}
                    {% set plsude2ans = true %}
                    <input type="checkbox" value="plusDe2ans" disabled="disabled" checked readonly>
                {% else %}
                    <input type="checkbox" value="plusDe2ans" disabled="disabled" readonly>
                {% endif %}
            </div>

        </th>
        <th class="card-info">
            <div class="card-item" id="menu-deroulant">
                <label for="">Produit visé : </label>
                <div>{{ produitUtilisateur }}</div>
            </div>
        </th>

        <th class="expander"></th>
    </tr>
    <tr>
        <th class="card-info">
            <div class="card-item" id="menu-deroulant">
                <label for="">Energie : </label>
                {% if energieUtilisateur == "Selectionnez votre energie" %}
                    <div>N/A</div>
                {% else %}
                    <div>{{ energieUtilisateur }}</div>
                {% endif %}
            </div>
        </th>
        <th class="card-info">
            <div class="card-item" id="menu-deroulant">
                <label for="">Chauffage : </label>
                {% if chauffageUtilisateur is empty %}
                    <div>N/A</div>
                {% endif %}
                {% for key, chauffage in chauffageUtilisateur %}
                    <div>{{ chauffageUtilisateur[key] }}</div>
                {% endfor %}
            </div>
        </th>

        <th class="expander"></th>
    </tr>
    <tr>
        <th class="card-info">
            <div class="card-item">
                <label for="">Nombre de salle de bain : </label>
                <div>{{ nbreSalleBainUtilisateur }}</div>
            </div>

        </th>
        <th class="card-info">
            <div class="card-item">
                <label for="">Nombre de personne au foyer : </label>
                <div>{{ nbreFoyerUtilisateur }}</div>
            </div>
        </th>

        <th class="expander"></th>
    </tr>
    <tr>
        <th class="card-info">
            <div class="card-item">
                <label for="">Revenu fiscal : </label>
                <div>{{ rfrUtilisateur }}</div>
            </div>
        </th>

        <th class="expander"></th>
    </tr>
    </tbody>
</table>

<table class="card my-2">
    <thead>
    <td colspan="2" class="card-header p-2 mb-2 bg-graisclair text-white rounded">Résultat Simulation</td>
    </thead>
    <tbody>
    <tr>
        <th class="card-info">
            <div class="card-item">
                <label for="">MaPrimeRénov' : </label>
                <div>{{ prime_renov }}€</div>
            </div>


        </th>
        <th class="card-info">
            <div class="card-item">
                <label for="">CEE : </label>
                <div>{{ prime_cee }}€</div>
            </div>
        </th>
    </tr>
    <tr>
        <th class="card-info">
            <div class="card-item">
                <label for="">Coup de pouce Chauffage : </label>
                <div>{{ prime_fioul }}€</div>
            </div>


        </th>
        <th class="card-info">
            <div class="card-item">
                <label for="">Montant total des primes : </label>
                <div>{{ total }}€</div>
            </div>
        </th>
    </tr>
    </tbody>
</table>
</div>
{% endapply %}

</body>
</html>

