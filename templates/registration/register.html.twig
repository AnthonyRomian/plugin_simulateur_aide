{% extends 'admin/base_admin.html.twig' %}

{% block title %}Enregistrer un compte{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center">
        {% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
        <form method="post" class="mt-4 col-6">
        <h1>Enregistrer un compte</h1>
        {% if app.user %}
            <div class="mb-3">
                Vous Ãªtes loguer en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        {{ form_start(registrationForm) }}
        {{ form_errors(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.name) }}
        {{ form_row(registrationForm.roles) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
            <button type="submit" class="btn btn-lg btn-primary mt-2">S'enregistrer</button>

            {{ form_end(registrationForm) }}

        </form>
    </div>

{% endblock %}
