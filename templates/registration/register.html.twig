{% extends 'admin/base_admin.html.twig' %}

{% block title %}Enregistrer un compte{% endblock %}

{% block body %}
    <div class="container">
        <form method="post">
        <h1>Enregistrer un compte</h1>

        {% if app.user %}
            <div class="mb-3">
                Vous Ãªtes loguer en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
        {{ form_start(registrationForm) }}
        {{ form_errors(registrationForm) }}
        {{ form_row(registrationForm.email) }}
